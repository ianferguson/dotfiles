[user]
  name = Ian Ferguson
  email = ian@ianferguson.io
  signingkey = F02FD45B

[core]
  pager = less
  autocrlf = input
  # named non-standardly to avoid mixing
  # my dotfiles repo .gitignore with the .gitignore for global
  # usage that is stored inside that repo and managed with stow
  excludesfile = ~/.gitignore_global
  editor = vim

[branch]
  autosetupmerge = true
  autosetuprebase = always

[push]
  # 'git push' will push the current branch to its tracking branch
  # the usual default is to push all branches
  default = upstream

[diff]
  renames = copy # makes the diff much shorter when moving or copying files
  renamelimit = 0
  tool = vimdiff
  prompt = false
  algorithm = histogram

[color]
  ui = auto
  branch = auto
  status = auto
  diff = auto
  interactive = auto

[repack]
  usedeltabaseoffset = true # >git 1.5

[rerere]
  enabled = true

[alias]
  a = add
  aa = add .
  ap = add -p .
  b = branch
  bd = branch -d
  br = branch -r
  c = commit
  cf = commit --fixup
  cff = commit --fixup HEAD
  cm = commit -m
  cma = commit --amend
  co = checkout
  cb = checkout -b
  cp = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  ctags = !.git/hooks/ctags
  d = diff
  dw = diff --word-diff -w
  fa = fetch --all --tags
  lo = log --oneline master..HEAD
  lolo = log --oneline
  lod = log --oneline --decorate
  ls = ls-files
  mf = merge --ff-only
  pr = pull-request
  pt = push --tags
  r = reset
  rh = reset HEAD^
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase -i
  rbo = ! GIT_SEQUENCE_EDITOR=true git rebase -i --autosquash
  rp = remote prune
  rpo = remote prune origin
  rv = remote -v
  s = status .
  sg = status
  sm = submodule
  sma = submodule add
  smi = submodule init
  smu  = submodule update
  st = stash
  stc = stash clear
  stl = stash list
  stp = stash pop
  tree =  log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  treed =  log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all --date-order

[merge]
  tool = vimdiff
[difftool]
  prompt = false
[url "git@github.com:"]
  insteadOf = https://github.com/
[url "git@bitbucket.org:"]
  insteadOf = https://bitbucket.org/
[url "git@github.va.opower.it:"]
  insteadOf = https://github.va.opower.it/
[hub]
  host = github.va.opower.it
[init]
  templatedir = ~/.git_template
[rebase]
  autosquash = true
[filter "trimWhitespace"]
  # http://rubiquity.com/2014/02/12/avoid-whitespace-shame-git-stripspace.html
  clean = git-stripspace
